{
  "name": "Tab Trends",
  "version": "2.0",
  "description": "Each new tab shows the Google Trends site.",
  "manifest_version": 3,
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "trends.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
{
    "name": "Home Screen Trends",
    "version": "1.0",
    "description": "Each new tab shows the the Google Trends screen.",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": ["storage","tabs"],

    "background": {
      "scripts": ["background.js"],
      "persistent": false},

    "chrome_url_overrides" : {
      "newtab": "trends.html"},

    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"},

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
      }
  }